# Railway Microservice Environment Variables

# Django Core
SECRET_KEY=your-secret-key-here
DEBUG=False
RAILWAY_ENVIRONMENT_NAME=production

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Configuration
